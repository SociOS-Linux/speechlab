{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/untitled9/hydration_diagnostics_event.v1.json",
  "title": "Hydration diagnostics event (Untitled 9 intent-level)",
  "type": "object",
  "required": [
    "event_type",
    "timestamp_ms"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "enum": [
        "hydration_error",
        "recoverable_error",
        "bootstrap_info"
      ]
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0
    },
    "message": {
      "type": "string"
    },
    "stack": {
      "type": [
        "string",
        "null"
      ]
    },
    "root_selector": {
      "type": [
        "string",
        "null"
      ],
      "description": "e.g., #root"
    },
    "hints": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}