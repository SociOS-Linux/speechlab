{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EvidenceEnvelope",
  "type": "object",
  "required": [
    "trace_id",
    "span_id",
    "capability_id",
    "capability_version",
    "ts",
    "actor",
    "decision",
    "hashes"
  ],
  "properties": {
    "trace_id": {
      "type": "string",
      "minLength": 8
    },
    "span_id": {
      "type": "string",
      "minLength": 4
    },
    "capability_id": {
      "type": "string"
    },
    "capability_version": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "description": "RFC3339 timestamp"
    },
    "actor": {
      "type": "object",
      "required": [
        "kind",
        "id"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "human",
            "agent",
            "service"
          ]
        },
        "id": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "decision": {
      "type": "string",
      "enum": [
        "allow",
        "deny",
        "defer",
        "observe"
      ]
    },
    "hashes": {
      "type": "object",
      "required": [
        "payload_sha256"
      ],
      "properties": {
        "payload_sha256": {
          "type": "string",
          "minLength": 16
        }
      },
      "additionalProperties": true
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
