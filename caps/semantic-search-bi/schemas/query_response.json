{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QueryResponse",
  "type": "object",
  "required": [
    "ok",
    "hits"
  ],
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "hits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "doc_id",
          "score"
        ],
        "properties": {
          "doc_id": {
            "type": "string"
          },
          "score": {
            "type": "number"
          },
          "snippet": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          }
        },
        "additionalProperties": true
      }
    },
    "took_ms": {
      "type": "integer",
      "minimum": 0
    }
  },
  "additionalProperties": false
}
